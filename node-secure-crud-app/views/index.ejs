<%- include('partials/header') %>
<style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        
        .navbar {
            background: rgba(255, 255, 255, 0.95) !important;
            backdrop-filter: blur(10px);
            box-shadow: 0 2px 20px rgba(0,0,0,0.1);
        }
        
        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
            color: #667eea !important;
        }
        
        .nav-link {
            color: #333 !important;
            font-weight: 500;
            margin: 0 10px;
            transition: color 0.3s;
        }
        
        .nav-link:hover {
            color: #667eea !important;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            padding: 8px 25px;
            border-radius: 25px;
        }
        
        .btn-outline-primary {
            border: 2px solid #667eea;
            color: #667eea;
            padding: 8px 25px;
            border-radius: 25px;
        }
        
        .hero-section {
            padding: 100px 0;
            color: white;
            text-align: center;
        }
        
        .hero-section h1 {
            font-size: 3.5rem;
            font-weight: bold;
            margin-bottom: 20px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
        }
        
        .hero-section p {
            font-size: 1.3rem;
            margin-bottom: 30px;
            opacity: 0.9;
        }
        
        .blog-card {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 25px rgba(0,0,0,0.15);
            transition: transform 0.3s, box-shadow 0.3s;
            margin-bottom: 30px;
        }
        
        .blog-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
        }
        
        .blog-card img {
            width: 100%;
            height: 250px;
            object-fit: cover;
        }
        
        .blog-card-body {
            padding: 25px;
        }
        
        .blog-card-title {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 15px;
            color: #333;
        }
        
        .blog-card-text {
            color: #666;
            margin-bottom: 20px;
        }
        
        .blog-meta {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 0.9rem;
            color: #999;
            margin-bottom: 15px;
        }
        
        .category-badge {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.85rem;
            display: inline-block;
            margin-bottom: 10px;
        }
        
        .blogs-section {
            padding: 60px 0;
        }
        
        .section-title {
            text-align: center;
            color: white;
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 50px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>


    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <h1>Bloq Dünyasına Xoş Gəlmisiniz</h1>
            <p>Maraqlı məqalələri kəşf edin və öz hekayələrinizi paylaşın</p>
            <a href="/blog/create" class="btn btn-primary btn-lg">
                <i class="fas fa-pen"></i> Yazı Yaz
            </a>
        </div>
    </section>

    <!-- Blogs Section -->
    <section class="blogs-section">
        <div class="container">
            <h2 class="section-title">Son Bloqlar</h2>
            <div class="row">
                
            </div>
        </div>
    </section>

    <script>
        
        async function fetchRecentBlogs() {
            try {
                const res = await fetch('/blog/getRecentBlogs', {
                    method: 'GET',
                    headers: { 'Content-Type': 'application/json' }
                });

                if (!res.ok){
                    let resData = await res.json();
                    throw new Error(resData.message || 'Bloqlar yüklənilə bilmədi!');
                }

                const data = await res.json();
                displayRecentBlogs(data.blogs);

            } catch (error) {
                console.error('Son bloqlar yüklənərkən xəta:', error);
                const blogsContainer = document.querySelector('.blogs-section .row');
                blogsContainer.innerHTML = `
                    <div class="col-12 text-center text-white">
                        <i class="fas fa-exclamation-circle fa-3x mb-3"></i>
                        <h3>Xəta baş verdi</h3>
                        <p>Bloqlar yüklənərkən problem yarandı</p>
                    </div>
                `;
            }
        }

        function displayRecentBlogs(blogs) {
            const blogsContainer = document.querySelector('.blogs-section .row');
            
            if (!blogs || blogs.length === 0) {
                blogsContainer.innerHTML = `
                    <div class="col-12 text-center text-white">
                        <i class="fas fa-newspaper fa-3x mb-3"></i>
                        <h3>Hələ heç bir bloq yoxdur</h3>
                        <p>İlk bloqu siz yaradın!</p>
                    </div>
                `;
                return;
            }

            blogsContainer.innerHTML = blogs.map(blog => {
                // Content-i qısaldırıq
                const truncatedContent = blog.content && blog.content.length > 150 
                    ? blog.content.substring(0, 150) + '...' 
                    : (blog.content || 'Məzmun yoxdur');

                // Tarix formatı
                const formattedDate = new Date(blog.createdAt).toLocaleDateString('az-AZ', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                });

                return `
                    <div class="col-md-4">
                        <div class="blog-card">
                            <img src="${blog.imageUrl || 'https://images.unsplash.com/photo-1499750310107-5fef28a66643?w=600&h=400&fit=crop'}" 
                                alt="${blog.title}"
                                onerror="this.src='https://images.unsplash.com/photo-1499750310107-5fef28a66643?w=600&h=400&fit=crop'">
                            <div class="blog-card-body">
                                <span class="category-badge">${blog.category || 'Ümumi'}</span>
                                <h3 class="blog-card-title">${blog.title}</h3>
                                <div class="blog-meta">
                                    <span><i class="fas fa-user"></i> ${blog.author?.username || 'Anonim'}</span>
                                    <span><i class="fas fa-calendar"></i> ${formattedDate}</span>
                                </div>
                                <p class="blog-card-text">${truncatedContent}</p>
                                <a href="/blog/view/${blog.uuid}" class="btn btn-primary">Daha Çox</a>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        }

        // Səhifə yüklənəndə bloqları çəkmək
        window.addEventListener('DOMContentLoaded', fetchRecentBlogs);

    </script>
<%- include('partials/footer') %>