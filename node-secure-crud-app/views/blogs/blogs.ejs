<body>
    <%- include('../partials/navbar') %>

    <!-- Page Header -->
    <section class="page-header">
        <div class="container">
            <h1><i class="fas fa-newspaper"></i> Bütün Bloqlar</h1>
            <p>Maraqlı məqalələri kəşf edin və oxuyun</p>
        </div>
    </section>

    <!-- Blogs Section -->
    <section class="blogs-section">
        <div class="container">
            <!-- Filter Section -->
            <div class="filter-section">
                <div class="search-box">
                    <input type="text" class="search-input" id="searchInput" placeholder="Bloq axtar...">
                    <button class="search-btn" onclick="searchBlogs()">
                        <i class="fas fa-search"></i> Axtar
                    </button>
                </div>
            </div>

            <!-- Loading Spinner -->
            <div id="loadingSpinner" class="loading-spinner">
                <i class="fas fa-spinner"></i>
                <h3>Bloqlar yüklənir...</h3>
            </div>

            <!-- Blogs Grid -->
            <div id="blogsContainer" class="row" style="display: none;"></div>

            <!-- No Results -->
            <div id="noResults" class="no-results" style="display: none;">
                <i class="fas fa-search"></i>
                <h3>Heç bir nəticə tapılmadı</h3>
                <p>Axtarış kriteriyalarını dəyişdirərək yenidən cəhd edin</p>
            </div>

            <!-- Pagination -->
            <div class="pagination-section" id="paginationSection" style="display: none;">
                <ul class="pagination" id="pagination"></ul>
            </div>
        </div>
    </section>

    <script>
        let allBlogs = [];
        let filteredBlogs = [];
        let currentPage = 1;
        const blogsPerPage = 9;

        async function fetchBlogs() {
            try {
                const res = await fetch('/blogs', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({})
                });

                if (!res.ok){
                    let resData = await res.json();
                    throw new Error(resData.message || 'Bloqlar yüklənilə bilmədi!');
                }

                const data = await res.json();
                allBlogs = data.blogs;
                filteredBlogs = data.blogs;
                displayBlogs();

            } catch (error) {
                console.error('Bloqlar yüklənərkən xəta:', error);
                document.getElementById('loadingSpinner').innerHTML = `
                    <i class="fas fa-exclamation-circle"></i>
                    <h3>Xəta baş verdi</h3>
                    <p>Bloqlar yüklənərkən problem yarandı</p>
                `;
            }
        }

        function displayBlogs() {
            const container = document.getElementById('blogsContainer');
            const loading = document.getElementById('loadingSpinner');
            const noResults = document.getElementById('noResults');
            const paginationSection = document.getElementById('paginationSection');

            loading.style.display = 'none';

            if (filteredBlogs.length === 0) {
                container.style.display = 'none';
                noResults.style.display = 'block';
                paginationSection.style.display = 'none';
                return;
            }

            noResults.style.display = 'none';
            container.style.display = 'flex';

            // Pagination hesablamaları
            const totalPages = Math.ceil(filteredBlogs.length / blogsPerPage);
            const startIndex = (currentPage - 1) * blogsPerPage;
            const endIndex = startIndex + blogsPerPage;
            const blogsToShow = filteredBlogs.slice(startIndex, endIndex);

            container.innerHTML = blogsToShow.map(blog => {
                // Content-i JavaScript ilə qısaldırıq
                const truncatedContent = blog.content && blog.content.length > 200 
                    ? blog.content.substring(0, 200) + '...' 
                    : (blog.content || '');
                
                return `
                    <div class="col-md-4">
                        <div class="blog-card">
                            <img src="${blog.imageUrl || '/images/default-blog.jpg'}" alt="${blog.title}">
                            <div class="blog-card-body">
                                <h3 class="blog-card-title">${blog.title}</h3>
                                <div class="blog-meta">
                                    <span><i class="fas fa-user"></i> ${blog.author?.username || 'Anonim'}</span>
                                    <span><i class="fas fa-calendar"></i> ${new Date(blog.createdAt).toLocaleDateString('az-AZ')}</span>
                                </div>
                                <p class="blog-card-text">${truncatedContent}</p>
                                <a href="/blog/view/${blog.uuid}" class="btn btn-primary">Daha Çox</a>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');

            // Pagination göstərmək
            if (totalPages > 1) {
                paginationSection.style.display = 'flex';
                renderPagination(totalPages);
            } else {
                paginationSection.style.display = 'none';
            }
        }

        function renderPagination(totalPages) {
            const pagination = document.getElementById('pagination');
            let paginationHTML = '';

            // Previous button
            paginationHTML += `
                <li class="page-item ${currentPage === 1 ? 'disabled' : ''}">
                    <a class="page-link" href="#" onclick="event.preventDefault(); changePage(${currentPage - 1})">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </li>
            `;

            // Page numbers
            for (let i = 1; i <= totalPages; i++) {
                paginationHTML += `
                    <li class="page-item ${currentPage === i ? 'active' : ''}">
                        <a class="page-link" href="#" onclick="event.preventDefault(); changePage(${i})">${i}</a>
                    </li>
                `;
            }

            // Next button
            paginationHTML += `
                <li class="page-item ${currentPage === totalPages ? 'disabled' : ''}">
                    <a class="page-link" href="#" onclick="event.preventDefault(); changePage(${currentPage + 1})">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            `;

            pagination.innerHTML = paginationHTML;
        }

        function changePage(page) {
            const totalPages = Math.ceil(filteredBlogs.length / blogsPerPage);
            if (page < 1 || page > totalPages) return;
            
            currentPage = page;
            displayBlogs();
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function searchBlogs() {
            const searchTerm = document.getElementById('searchInput').value.trim().toLowerCase();
            currentPage = 1; // Axtarışda həmişə 1-ci səhifəyə qayıdırıq

            if (searchTerm === '') {
                // Axtarış boşdursa, bütün bloqları göstər
                filteredBlogs = allBlogs;
            } else {
                // Axtarış edirik: title və content-də axtar
                filteredBlogs = allBlogs.filter(blog => {
                    const title = (blog.title || '').toLowerCase();
                    const content = (blog.content || '').toLowerCase();
                    
                    return title.includes(searchTerm) || content.includes(searchTerm);
                });
            }

            displayBlogs();
        }

        // Enter düyməsi ilə axtarış
        document.getElementById('searchInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                searchBlogs();
            }
        });

        // Səhifə yüklənəndə bloqları çəkmək
        window.addEventListener('load', fetchBlogs);
    </script>

