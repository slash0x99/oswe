<%- include('../partials/header') %>

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        
        .reset-container {
            width: 100%;
            max-width: 450px;
        }
        
        .reset-wrapper {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 50px rgba(0,0,0,0.2);
        }
        
        .reset-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 50px 40px;
            text-align: center;
        }
        
        .reset-header h1 {
            margin: 0;
            font-size: 2rem;
            font-weight: bold;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
        }
        
        .reset-header p {
            margin: 15px 0 0 0;
            opacity: 0.9;
            font-size: 1rem;
        }
        
        .reset-body {
            padding: 50px;
        }
        
        .form-group {
            margin-bottom: 30px;
        }
        
        .form-label {
            font-weight: 600;
            color: #333;
            margin-bottom: 12px;
            font-size: 1.05rem;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .form-label i {
            color: #667eea;
            font-size: 1.2rem;
        }
        
        .form-control {
            width: 100%;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            padding: 15px;
            font-size: 1rem;
            transition: all 0.3s;
            box-sizing: border-box;
        }
        
        .form-control:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.15);
        }
        
        .submit-btn {
            width: 100%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            padding: 15px;
            border-radius: 10px;
            color: white;
            font-weight: 600;
            font-size: 1.1rem;
            cursor: pointer;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }
        
        .submit-btn:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
        }
        
        .submit-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }
        
        .login-link {
            text-align: center;
            margin-top: 30px;
            padding-top: 30px;
            border-top: 2px solid #e0e0e0;
        }
        
        .login-link p {
            color: #666;
            margin: 0;
        }
        
        .login-link a {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s;
        }
        
        .login-link a:hover {
            color: #764ba2;
        }
        
        .alert {
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
            display: none;
            animation: slideIn 0.3s ease-out;
        }
        
        .alert-success {
            background: #d4edda;
            border: 2px solid #28a745;
            color: #155724;
        }
        
        .alert-error {
            background: #f8d7da;
            border: 2px solid #f5c6cb;
            color: #721c24;
        }
        
        .alert-info {
            background: #d1ecf1;
            border: 2px solid #bee5eb;
            color: #0c5460;
        }
        
        .alert i {
            margin-right: 10px;
        }
        
        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .spinner {
            display: inline-block;
            animation: spin 1s linear infinite;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="reset-container">
        <div class="reset-wrapper">
            <div class="reset-header">
                <h1>
                    <i class="fas fa-lock-open"></i> Şifrəni Sıfırla
                </h1>
                <p>Hesabınıza daxil olmaq üçün e-poçt ünvanınızı daxil edin</p>
            </div>
            
            <div class="reset-body">
                <!-- Alert Messages -->
                <div id="alertMessage" class="alert"></div>
                
                <!-- Reset Form -->
                <form id="resetForm" onsubmit="handleResetPassword(event)">
                    <div class="form-group">
                        <label for="emailInput" class="form-label">
                            <i class="fas fa-envelope"></i> E-Poçt Ünvanı
                        </label>
                        <input 
                            type="email" 
                            class="form-control" 
                            id="emailInput" 
                            placeholder="sizin@email.com"
                            required
                        >
                    </div>
                    
                    <button type="submit" class="submit-btn" id="submitBtn">
                        <i class="fas fa-paper-plane"></i> Göndər
                    </button>
                </form>
                
                <div class="login-link">
                    <p>Hesabınıza daxil ola bilərsiniiz? <a href="/login">Daxil Ol</a></p>
                </div>
            </div>
        </div>
    </div>

    <script>
        async function handleResetPassword(event) {
            event.preventDefault();
            
            const email = document.getElementById('emailInput').value.trim();
            const submitBtn = document.getElementById('submitBtn');
            const alertMessage = document.getElementById('alertMessage');
            
            if (!email) {
                showAlert('E-poçt ünvanı daxil edin!', 'error');
                return;
            }
            
            try {
                // Button-u disable et
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="fas fa-spinner spinner"></i> Göndərilir...';
                
                const response = await fetch('/auth/resetPassword', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ email: email })
                });
                
                const data = await response.json();
                
                if (response.ok) {
                    showAlert(data.message || 'Mail uğurla göndərildi! E-poçtunuzu yoxlayın.', 'success');
                    document.getElementById('resetForm').reset();
                    
                    // 2 saniyə sonra login səhifəsinə yönəlt
                    setTimeout(() => {
                        window.location.href = '/auth/login';
                    }, 3000);
                } else {
                    showAlert(data.message || 'E-poçt göndərilərkən xəta baş verdi!', 'error');
                }
                
            } catch (error) {
                console.error('Xəta:', error);
                showAlert('Serverlə bağlantı qurularkən xəta baş verdi!', 'error');
            } finally {
                // Button-u aktiv et
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="fas fa-paper-plane"></i> Göndər';
            }
        }
        
        function showAlert(message, type) {
            const alertMessage = document.getElementById('alertMessage');
            const icons = {
                success: 'fa-check-circle',
                error: 'fa-exclamation-circle',
                info: 'fa-info-circle'
            };
            
            alertMessage.innerHTML = `
                <i class="fas ${icons[type]}"></i>
                <span>${message}</span>
            `;
            
            alertMessage.className = `alert alert-${type}`;
            alertMessage.style.display = 'block';
            
            // 5 saniyə sonra mesajı gizlət (success halında tezliklə login-ə git)
            if (type !== 'success') {
                setTimeout(() => {
                    alertMessage.style.display = 'none';
                }, 5000);
            }
        }
    </script>

</body>
</html>
<%- include('../partials/footer') %>